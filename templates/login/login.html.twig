{% extends 'base.html.twig' %}

{% block title %}Lassap shop - Login{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{asset('css/login.css')}}"> {% endblock %}

{% block style %}
<style>
    #login .page-photo{
        width: 100%;
        height: 100%;
        background: url('{{asset("img/login-page.jpg")}}');
        background-size: 100% 100%;
        background-repeat: no-repeat;
    }
</style>
{% endblock %}

{% block body %}
<section id="login">
    <div class="login-form">
        <form action="#" method="POST">
            <h1>Log in to Lassap.co.uk</h1>
            <div class="input-container">
                <div class="login-email">
                    <label for="email_address">Email</label>
                    <input type="email" name="email_address" id="email_address" placeholder="Your Email">
                </div>
                <div class="login-password">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" placeholder="Your Password">
                </div>
                <div class="btn-wrapper">
                    <button type="submit">Log in</button>
                    <a class="forgot-psw" href="#">Forgot your password ?</a>
                    <p class="new-account">You don't have an account ?  <a href="{{path('signup')}}">Create an account</a></p>
                </div>
            </div>
        </form>
    </div>
    <div class="page-photo"></div>
</section>
{% endblock %}