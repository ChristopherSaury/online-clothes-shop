{% extends 'base.html.twig' %}

{% block title %}Lassap Shop - Contact{% endblock %}
{% block stylesheets %} <link rel="stylesheet" href="{{asset('css/contact.css')}}"> {% endblock %}

{% block body %}
    <section id="contact">
        <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d19855.198590733606!2d0.04991140055515084!3d51.53339719217614!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a637210a1825%3A0xfaf9164941a804a5!2sEast%20Ham%2C%20Londres%2C%20Royaume-Uni!5e0!3m2!1sfr!2sfr!4v1669468273057!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="form-section">
            <div class="contact-info">
                <h1 class="ct-title">Contact</h1>
                <div class="ct-shop-info">
                    <span><i class="fa-solid fa-location-dot"></i><p>1 Lorem Ipsum, London, United Kingdom</p></span>
                    <span><i class="fa-solid fa-clock"></i> <p>Monday - Saturday : 7:00 - 20:00</p></span>
                    <span><i class="fa-solid fa-at"></i><p>lassap@yopmail.com</p></span>
                </div>
            </div>
            <div class="ct-form-container">
                <form action="#" method="post">
                    <input type="text" id="full_name" name="full_name" placeholder="Full Name*">
                    <input type="text" id="email_sender" name="email_sender" placeholder="Email Address*">
                    <input type="text" id="contact_subject" name="contact_subject" placeholder="Message Contact*">
                    <textarea name="" id="" placeholder="Write a Message....."></textarea>
                    <button class="ct-button" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
